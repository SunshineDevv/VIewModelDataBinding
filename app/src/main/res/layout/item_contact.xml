<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Name"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textViewPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Email"
            android:textSize="28sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textDateCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="end"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textDateUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="end"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>




</androidx.cardview.widget.CardView>